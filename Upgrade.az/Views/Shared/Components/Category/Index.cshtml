@model List<Upgrade_az.Models.CourseDetail.Category>
@{
    Layout = null;
}


    @foreach (var category in Model)
    {
        <div class="singles_items" style="min-width:363px; max-width:400px;">
            <div class="edu_cat">
                <div class="pic">
                    <a class="pic-main" asp-controller="course" asp-action="category" asp-route-id ="@category.Id"><img src="~/uploads/categories/@category.Photo" style=" width:100%; max-height: 215px;" class="img-fluid" alt=""></a>
                </div>
                <div class="edu_data">
                    <h4 class="title"><a  asp-controller="course" asp-action="category" asp-route-id ="@category.Id">@category.Name</a></h4>
                    <ul class="meta">
                        <li class="video"><i class="ti-video-clapper"></i>@category.Courses.Count Courses</li>
                    </ul>
                </div>
            </div>
        </div>


    }

