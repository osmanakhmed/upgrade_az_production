
@{
    ViewData["Title"] = "Instructors";
    Layout = "~/Views/Shared/_TeachersLayout.cshtml";
}




<main>

<!-- page title area start -->
<section class="page__title-area page__title-height page__title-overlay d-flex align-items-center"  style="background-image: url(@Href("~/img/page-title.jpg")" >
    <div class="container">
        <div class="row">
            <div class="col-xxl-12">
                <div class="page__title-wrapper mt-110">
                    <h3 class="page__title">Our Instructors</h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb" style="background: transparent;">
                            <li class="breadcrumb-item"><a  style="color:white !important;" asp-action="Index" asp-controller="Home">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Our Instructors</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- page title area end -->
<!-- teacher area start -->
<section class="teacher__area pt-115 pb-110">
    <div class="container">
        <div class="row">
            <div class="col-xxl-6 offset-xxl-3">
                <div class="section__title-wrapper text-center mb-60">
                    <h2 class="section__title">
                        Our Most <br>
                        Popular <span class="yellow-bg"> Teachers <img src="~/img/yellow-bg-2.png" alt="">  </span> <br>
                    </h2>
                    <p>You don't have to struggle alone, you've got our assistance and help.</p>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("Instructor")

    </div>
</section>
<!-- teacher area end -->
      </main>
